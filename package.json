{
  "name": "thumpnail",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "dotenv -- turbo dev",
    "dev:web": "dotenv -- turbo dev --filter=web",
    "dev:hash-service": "turbo dev --filter=hash-service",
    "dev:forge": "turbo dev --filter=blur-forge",
    "lint": "turbo lint",
    "db:push": "turbo db:push",
    "db:generate": "turbo db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rimraf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@tooling/eslint-config": "workspace:*",
    "@tooling/typescript-config": "workspace:*",
    "dotenv-cli": "^7.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rimraf": "^5.0.5",
    "turbo": "latest",
    "vitest": "^1.5.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
